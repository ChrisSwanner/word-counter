@{
  Layout = "Views/Shared/_Layout.cshtml";
}

<div class="main-area">
  <form action="/results" method="post">
    <div class="form-group">
      <label for="user-word">Word: </label>
      <input class="form-control" type="text" name="user-word" placeholder="Cheesecake">
    </div>
    <div class="form-group">
      <label for="user-sentence">Phrase/Sentence: </label>
      <input class="form-control" type="text" name="user-sentence" placeholder="Pizza, pie, cheese, chocolate, cake, and cheesecake!">
    </div>
    <button type="submit" class="btn app-btn" >Compare!</button>
  </form>
</div>
